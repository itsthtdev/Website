# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Configuration
# SECURITY: Change these in production!
# To generate a password hash: node -e "console.log(require('bcryptjs').hashSync('YOUR_PASSWORD', 10))"
ADMIN_EMAIL=admin@ezclippin.studio
ADMIN_PASSWORD_HASH=$2a$10$eC7Ah5Xj1VieqDE2jDLVIOqwiFPelK.W2DtYuXqI6SlXg9KyDubtW
ADMIN_NAME=Admin User
# Default password is "admin123" - CHANGE THIS IN PRODUCTION!

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here
APPWRITE_DATABASE_ID=your_database_id_here
APPWRITE_USERS_COLLECTION_ID=your_users_collection_id_here
APPWRITE_VISITS_COLLECTION_ID=your_visits_collection_id_here
APPWRITE_CONTACTS_COLLECTION_ID=your_contacts_collection_id_here
APPWRITE_DOWNLOADS_COLLECTION_ID=your_downloads_collection_id_here
APPWRITE_SUBSCRIPTIONS_COLLECTION_ID=your_subscriptions_collection_id_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Optional: Comma-separated list of allowed Stripe Price IDs for validation
# STRIPE_ALLOWED_PRICE_IDS=price_xxx,price_yyy,price_zzz

# JWT Configuration
# SECURITY: Generate a strong random secret for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@ezclippin.studio

# Download Configuration
DOWNLOAD_BASE_URL=https://github.com/itsthtdev/VS_auto_clipper/releases/latest/download
EZCLIPPIN_INSTALLER_WINDOWS=EzClippin-Setup.exe
EZCLIPPIN_INSTALLER_MAC=EzClippin.dmg
EZCLIPPIN_INSTALLER_LINUX=ezclippin-linux.tar.gz

# Client URL (for CORS and redirects)
CLIENT_URL=http://localhost:3000
